<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginactivity_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context="com.bigdipper.chj.bigdipperv1.LoginActivity">

    <TextView
        android:layout_gravity="center_horizontal"
        android:textSize="50px"
        android:layout_marginTop="100px"
        android:text="Log In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:scaleType="fitXY"
        android:layout_marginTop="106px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_backbox"
        android:orientation="vertical"
        android:layout_width="654px"
        android:layout_height="725px">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/loginactivity_edittext_id"
            android:hint="Username or Email"
            android:paddingStart="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/loginactivity_edittext_password"
            android:hint="Password"
            android:paddingStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:text="login"
        android:background="@drawable/login_button"
        android:id="@+id/loginactivity_button_login"
        android:layout_width="566px"
        android:layout_height="96px" />


    </LinearLayout>

    <TextView
        android:layout_gravity="center_horizontal"
        android:text="Don't have an account?"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="20dp"
        android:text="Sign Up"
        android:id="@+id/loginactivity_button_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
