<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frienditem_swipe"
    android:layout_width="match_parent"
    android:layout_height="71dp">

        <android.support.v7.widget.CardView
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginBottom="2dp"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <CheckBox
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/frienditem_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_toRightOf="@+id/frienditem_checkbox"
                    android:layout_margin="10dp"
                    android:id="@+id/frienditem_imageview"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:text="이름"
                    android:textSize="16dp"
                    android:layout_toRightOf="@id/frienditem_imageview"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/frienditem_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="전화번호"
                    android:textSize="12dp"
                    android:layout_toRightOf="@id/frienditem_imageview"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/frienditem_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>